{
	"info": {
		"_postman_id": "beec125a-8890-4504-bb91-4031f408747b",
		"name": "Trello",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "create Board",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "36935760-bb72-4fa6-83ef-8160990cd07e",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"}); ",
							"",
							"const response = pm.response.json();",
							"",
							"pm.test(\"Your test name\", function () {",
							"   ",
							"    pm.expect(response.prefs.permissionLevel).to.eql(\"private\");",
							"});",
							"pm.test(\"Your test name\", function () {",
							"    pm.expect(response.name).to.eql(pm.environment.get(\"boardName\"));",
							"",
							"    pm.expect(response.closed).to.eql(false);",
							"});",
							"pm.globals.set(\"boardid\", response.id);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "a46c7b07-9cd7-445e-bf3b-b3926220af07",
						"exec": [
							"pm.environment.set(\"boardName\", getRandomBoardName());",
							"",
							"function getRandomBoardName()",
							"{",
							"    const boardName = \"My new board \" + parseInt(Math.random()* 10000);",
							"    return boardName;",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://api.trello.com/1/boards/?name={{boardName}}&key={{key}}&token={{token}}&defaultLists=false",
					"protocol": "https",
					"host": [
						"api",
						"trello",
						"com"
					],
					"path": [
						"1",
						"boards",
						""
					],
					"query": [
						{
							"key": "name",
							"value": "{{boardName}}"
						},
						{
							"key": "key",
							"value": "{{key}}"
						},
						{
							"key": "token",
							"value": "{{token}}"
						},
						{
							"key": "defaultLists",
							"value": "false"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Create a new list",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "8e71cf25-a3ac-4dcd-bab0-69108c51245f",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"const response = pm.response.json();",
							"",
							"pm.test(\"Your test name\", function () {",
							"    ",
							"    pm.expect(response.idBoard).to.eql(pm.globals.get(\"boardid\"));",
							"});",
							"pm.globals.unset(\"boardid\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://api.trello.com/1/lists?name=TODO&idBoard={{boardid}}&token={{token}}&key={{key}}",
					"protocol": "https",
					"host": [
						"api",
						"trello",
						"com"
					],
					"path": [
						"1",
						"lists"
					],
					"query": [
						{
							"key": "name",
							"value": "TODO"
						},
						{
							"key": "idBoard",
							"value": "{{boardid}}"
						},
						{
							"key": "token",
							"value": "{{token}}"
						},
						{
							"key": "key",
							"value": "{{key}}"
						}
					]
				}
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}